<%- include('../includes/fullHead'); %>
  <form method="post" action="">
    <div class="form-group">
      <label for="name">Product:</label>
      <input type="text" id="name" class="form-control" name="name" value=<%= product.name %> >
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="number" id="price" class="form-control" name="price" step="0.5" min="0" value=<%= product.price %> >
    </div>
    <div class="form-group">
      <label for="category">Category:</label>
      <select id="category" class="form-control" name="category">
        <% for(const category of categories) { %>
          <option 
            value=<%= category.id %>
            <% if(product.Category && category.id == product.Category.id) { %>
              selected
            <% } %>
          >
            <%= category.category %>
          </option>
        <% } %>

      </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">
      <%= `${product.id ? 'Update' : 'Add'}` %>
    </button>
  </form>

<%- include('../includes/footer'); %>