<%- include('../includes/fullHead'); %>
  <%- include('./categoryDetail'); %>
  <div class="mt-3">
    <button type="button" class="btn btn-primary">
      <a class="nav-link active" aria-current="page" href=<%= category.urlUpdatePage %>>Update</a>
    </button>
    <button type="button" class="btn btn-danger">
      <a class="nav-link active" aria-current="page" href=<%= category.urlDeletePage %>>Delete</a>
    </button>
  </div>
  <% if(category.Products.length > 0) { %>
    <h3 class="mt-3"><strong>Products: </strong></h3>
    <% for(const product of category.Products) { %>
      <h3>
        <a href=<%= product.urlPage %>><%= `#${product.id} - ${product.name}` %></a>
      </h3>
      <hr>
    <% } %>
  <% } %>
<%- include('../includes/footer'); %>